{
  "compilerOptions": {
    "target": "es2020",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["vitest/globals", "vite/client"]
  },
  "include": ["./src/**/*", "./__tests__/**/*", "./examples/**/*"]
}
